<% layout('layouts/boiler') %>
<link rel="stylesheet" href="/CSS/stars.css">
<div class="row">
    <div class="col-6  mb-3">
      <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% foundCamp.images.forEach((img,i) =>  { %>          
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="" width="120%" height="550vh">
          </div>
          <% }) %>
        </div>
        <% if(foundCamp.images.length > 1) { %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>      
        <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= foundCamp.name %></h5>
              <p class="card-text"><%= foundCamp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= foundCamp.location %></li>
              <li class="list-group-item text-primary">Posted By <%= foundCamp.author.username %></li>
              <li class="list-group-item">$<%= foundCamp.price %>/night</li>
            </ul>
            <% if(currentUser && foundCamp.author.equals(currentUser._id)) { %>
              <div class="card-body">
                <a href="/campgrounds/<%= foundCamp._id %>/edit" class="card-link btn btn-info">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= foundCamp._id %>?_method=DELETE" method="post">
                      <button class="btn btn-danger">Delete</button>
                  </form>
              </div>
            <% } %>
            <div class="card-footer text-muted mb-3">
                <a class="btn btn-primary" href="/campgrounds">Back to campgrounds</a>
            </div>
          </div>
    </div>
    <div class="col-6">
      <div id="map"></div>
      <% if(currentUser) { %>
      <h2>Leave a review</h2>
      <form class="validate-form" action="/campgrounds/<%= foundCamp.id %>/reviews" method="post" class="mb-3" novalidate>
        <div class="star">
          <fieldset class="starability-coinFlip">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating" />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label class="form-label" for="review">Review</label>
          <textarea class="form-control" name="review[body]" id="review" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">
            Looks Good!
          </div>
        </div>
        <button class="btn btn-success">
          Submit
        </button>
      </form>

      <% } %>
      <% for(let r of foundCamp.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= r.author.username %></h5>
          <p class="starability-result" data-rating="<%= r.rating %>">
            Rated: <%= r.rating %> stars
          </p>
          <p class="card-text">Review: <%= r.body %></p>
          <% if(currentUser && r.author.equals(currentUser._id)) {%>
            <form action="/campgrounds/<%= foundCamp.id %>/reviews/<%= r.id %>?_method=DELETE" method="post">
              <button class="btn btn-danger">
                Delete
              </button>
            </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
</div>